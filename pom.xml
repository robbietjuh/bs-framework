<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.robbytu.banjoserver</groupId>
  <artifactId>framework</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>framework</name>
  <url>http://www.banjoserver.nl</url>
  <description>APIs to enable interaction between Banjoserver servers and plugins.</description>

  <repositories>
    <repository>
      <id>bukkit-rep</id>
      <name>Bukkit Repository</name>
      <url>http://repo.bukkit.org/content/groups/public</url>
    </repository>
  </repositories>

  <build>
    <defaultGoal>clean package</defaultGoal>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>plugin.yml</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <developers>
    <developer>
      <id>robbietjuh</id>
      <name>Robert de Vries</name>
      <email>r.devries@robbytu.net</email>
      <url>http://www.robbytu.net</url>
      <roles>
        <role>developer</role>
        <role>maintainer</role>
        <role>support</role>
      </roles>
      <timezone>2</timezone>
    </developer>
  </developers>

  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.5.2-R0.2-SNAPSHOT</version>
    </dependency>
  </dependencies>
</project>
